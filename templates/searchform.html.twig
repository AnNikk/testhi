{% extends 'base.html.twig' %}

{% block title %}VK Search{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1>Поиск по новостям ВК</h1>
    </div>
    {{ form_start(form) }}
    <div class="container text-center">
        <div class="row pt-3">
            <div class="col-7 text-right">
                {{ form_widget(form.qtext) }}
            </div>
            <div class="col-5 text-left">
                <input type="submit" value="Search" />
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %} 

