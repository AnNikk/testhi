{% extends 'base.html.twig' %}

{% block title %}VK Search List{% endblock %}

{% block body %}

    {# { dump(newslist) } #}

    <div class="container text-center">
        <h1>Поиск по новостям ВК. Поисковый запрос: {{ qqq }}</h1>
    </div>
    
    {% for nnews in newslist %}

        {# { dump(nnews) } #}
        <div class="container text-center">
            <div class="row pt-3">
                <div class="col-2 text-right">
                    {{ nnews.name }}
                    <br />
                    {{ nnews.date|date('d.m.Y H:i:s') }}
                </div>
                <div class="col-10 text-left">
                    {{ nnews.text|slice(0,200)|nl2br }}
                    <em><a href="{{ path('news', {'id': nnews.id}) }}" class="small">Читать полностью...</a></em>
                </div>
            </div>
        </div>

    {% endfor %}
    
    <div class="container text-center">
        <div class="row pt-3">
            <div class="col-2">&nbsp;</div>
            <div class="col-9 text-left">
                {{ knp_pagination_render(newslist, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container text-center">
        <div class="row pt-3 pb-3">
            <div class="col-12">
                <a href="{{ url('homepage') }}">Вернуться к поиску</a>
            </div>
        </div>
    </div>
       
{% endblock %} 
